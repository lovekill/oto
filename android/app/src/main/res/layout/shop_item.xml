<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
            android:id="@+id/shopImage"
            android:scaleType="centerCrop"
            android:src="@drawable/default_image"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_width="@dimen/shop_image_weight"
            android:layout_height="@dimen/shop_image_height"/>
    <TextView
            android:id="@+id/shopName"
            android:layout_toRightOf="@+id/shopImage"
            android:layout_alignTop="@+id/shopImage"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:text="合兴源"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:layout_alignLeft="@id/shopName"
            android:id="@+id/limitAmountLayout"
            android:layout_below="@id/shopName"
            android:orientation="horizontal"
            android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView
                android:textSize="16sp"
                android:id="@+id/limitAmount"
                android:text="35"
                android:textColor="@color/red_light"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="12sp"
                  android:layout_marginLeft="4dp"
                  android:layout_marginTop="8dp"
                  android:text="元起送"/>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_alignLeft="@id/shopName"
                  android:orientation="horizontal"
                  android:layout_below="@id/limitAmountLayout"
                  android:layout_marginTop="8dp"
                  android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:text="满"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_width="wrap_content"
                android:text="30"
                android:textColor="@color/black"
                android:layout_marginLeft="4dp"
                android:id="@+id/maxAmount"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="减"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_width="wrap_content"
                android:text="2"
                android:textColor="@color/black"
                android:layout_marginLeft="4dp"
                android:id="@+id/subtrackPrice"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>